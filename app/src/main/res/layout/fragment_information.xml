<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.kanto.projects.InformationFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listinfomation"
            android:layout_width="match_parent"
            android:layout_height="274dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="83dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="38dp"
            android:layout_weight="1"
            android:text='ข้อมูลของผู้ใช้'
            android:textSize="18sp"
            android:textStyle="bold"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="189dp"
            android:layout_alignParentBottom="true"

            android:background="#ffff"
            android:text="  ประเมินผลตนเองในการปฏิบติตามรายการอาหาร"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonscore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textscore"

            android:layout_marginEnd="25dp"
            android:text="ประเมิน"/>

        <EditText
            android:id="@+id/textscore"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="108dp"
            android:layout_marginStart="19dp"
            android:hint="กรอกเลข 1-100"
            android:inputType="number|numberDecimal"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/buttonscore"
            >

            <TextView
                android:id="@+id/textView17"
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textscore"
                android:layout_below="@+id/buttonscore"
                android:layout_weight="1"
                android:text="     คะแนนในการที่ผู้ใช้งานปฏิบัติตามแผนอาหาร"/>

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView17"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:text="     ผู้ใช้คิดว่าตนเองปฏิบัติตามแผนอาหารเป็นร้อยละเท่าไหร่"/>
        </RadioGroup>

    </RelativeLayout>





</RelativeLayout>
